.container {
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.head{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.title{
  font-size: 36rpx;
  color: #4b556c;
  margin-top: 30rpx;
  vertical-align: middle;
  font-weight: 700;
  letter-spacing: 2px;
}

.tool{
  margin-top: 20rpx;
}

.circle-image{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-image image{
  width: 60rpx;
  height: 60rpx;
}
.share-image{
  margin-left: 30rpx;
}



.zhixian{
  width: 100%;
  height: 2px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 34rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  letter-spacing: 2rpx;
  font-size: 24rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  /**经典垂直居中的样式**/
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6; /**透明度**/

}
